#!/usr/bin/env bash
# This script installs nginx in a local machine
apt-get -y update
apt-get -y install nginx
ufw allow 'Nginx HTTP'
touch /var/www/html/index.html
touch /usr/share/nginx/html/index.nginx-debian.html
touch /usr/share/nginx/html/custom_404.html
chmod 666 /var/www/html/index.html
chmod 666 /usr/share/nginx/html/index.nginx-debian.html
chmod 666 /usr/share/nginx/html/custom_404.html
echo "Holberton School" > /var/www/html/index.html
echo "Holberton School" > /usr/share/nginx/html/index.nginx-debian.html
echo "Ceci n'est pas une page" > /usr/share/nginx/html/custom_404.html
sed -i 's/# pass the PHP scripts to FastCGI server listening on 127.0.0.1:9000/rewrite \/redirect_me\/   https:\/\/www.youtube.com\/watch?v=QH2-TGUlwu4 permanent;/' /etc/nginx/sites-available/default
sed -i 's/#location ~ \\.php$ {/error_page 404 \/custom_404.html;/' /etc/nginx/sites-available/default
sed -i 's/#       include snippets\/fastcgi-php.conf;/location = \/custom_404.html { root \/usr\/share\/nginx\/html;internal; }/' /etc/nginx/sites-available/default
sudo service nginx restart
